<section class="post-card">
    <div class="post-header">
      <h2 class="post-title">{{ posts.title }}</h2>
      {{!-- <h2 class="post-title">{{ posts.id }}</h2> --}}
      <h2 class="post-author">Posted by Name Name on 5/8/2020</h2>
    </div>
    <div>
      <p>{{ posts.content }}</p>
    </div>
</section>
<section class="post-card">
  {{#each comments as |comment|}}
    <p>Comment: {{ content }}</p>
    <p>Created by {{user.username}} on {{ format_date createdAt }}</p>
  {{/each}}
</section>

