<div class="login-card">
  <h2 class="login-title">Create New Post</h2>
  <form class="form login-form">
    <div class="form-group">
      <label for="post-title">Title</label>
      {{!-- <input class="form-input" type="textarea" id="post-title" value={{ post.title }}/> --}}

      <textarea id="post-title" name="post-title" class="form-input" rows="1" cols="30">{{ post.title }}</textarea>

    </div>

    <div class="form-group">
      <label for="post-content">Content</label>
      {{!-- <input class="form-input" type="text" id="post-content" value={{ post.content }}/> --}}

      <textarea id="post-title" name="post-title" class="form-input" style="align-content:left" rows="2" cols="30">{{ post.content }}</textarea>

      
    </div>

    <div class="form-group">
      <button class="btn btn-primary btn-custom" type="submit">Update Post</button>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-custom" type="submit">Delete Post</button>
    </div>
  </form>
</div>

